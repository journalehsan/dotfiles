# Ananicy-cpp rules for Hyprland
# Place in /etc/ananicy.d/00-hyprland.rules

# Hyprland compositor - highest priority
{ "name": "Hyprland", "type": "Compositor", "nice": -10, "sched": "rr", "rtprio": 10, "ioclass": "realtime", "ionice": 0 }
{ "name": "hyprland", "type": "Compositor", "nice": -10, "sched": "rr", "rtprio": 10, "ioclass": "realtime", "ionice": 0 }

